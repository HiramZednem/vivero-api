generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model products {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  quantity    Int
}

model orders {
  id          Int      @id @default(autoincrement())
  product_id  Int
  quantity    Int
  created_at  DateTime @default(now())
}